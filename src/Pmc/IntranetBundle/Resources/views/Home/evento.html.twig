<!-- BOX EVENTO --> 
<div class="row">
  <h6 class="tit-azul linha-azul {{ activo }}" style="font-weight:bolder"
      title="{{ titulo }}">Eventos</h6>        
  <div class="col-sm-12 panel panel-default box-eventos"  style="margin-bottom: 0px">
      <div class="row">
{# Lado Izquierdo #}          
          <div class="col-sm-8" style="background-color: #001646;">
              <div class="row">
{# Escoger entre video e imagen #}
{% if ( p.video|trim|length > 0) %}                      
                        {{ p.video|raw }}          
{% elseif p.imagem|trim|length > 0 %}                         
                <img style="width: 100%; margin: 0px" 
                     src="{{ asset(path_imagens ~ p.imagem) }}" /> 
{% else %}
                <img src="{{ asset(path_img ~'no_image.jpg') }}"
                     style="width:100%; margin: 0px" />                                
{% endif %}                    
              </div>   
          </div>
{# Lado Derechoo #}
          <div class="col-sm-4">
              <div class="row">
                  <div class="col-sm-12 tit-branco2" style="background-color:#06C; height:65px;">
                      <div class="row">
                          <div class="col-sm-12 inicio-eventos">
                             Data
                          </div>
                          <div class="col-sm-12 data-eventos">
                              {{ p.dataEvento|date('d') }}
                              {{ p.dataEvento|date('M')|trans|lower }}
                          </div>    
                      </div>                      
                  </div>
              </div>    
              <div class="row" style="text-align: justify"> 
                  <div class="col-sm-12 text-eventos">
                    {{ p.titulo|length > 100 ? p.titulo|slice(0, 100) ~ '...' : p.titulo  }}                                
                  </div>              
              </div>
          </div>
      </div>
      <div class="row">
          <div class="col-sm-8 box-eventos-comentarios">
              <a data-toggle="collapse" href="#collapse{{p.id}}">
                <img src="{{ asset(path_img ~'ico-comentarios2.png') }}" 
                     width="22" height="24"/>
                <span style="margin-left:5px;">Comentários</span></a>                  
          </div>  
          <div class="col-sm-4" style="text-align: right">
              <a data-toggle="collapse" href="#collapse{{p.id}}">
                <img src="{{ asset(path_img ~'ico-leia2.png') }}" 
                     width="23" height="19">
                <span style="margin-left:5px;">Leia Mais</span></a>                         
          </div>   
      </div>        
  </div>
</div>
{# ACCORDION #}    
