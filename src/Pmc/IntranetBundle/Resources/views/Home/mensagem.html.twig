<!-- BOX MENSAGEM --> 
<div class="row">
  <h6 class="tit-preto linha-preto" style="font-weight:bolder;">Mensagens</h6>        
  <div class="col-lg-12 panel panel-default" style="margin-bottom: 0px;position: relative; z-index: 1">
{# Boton Eliminar Comentario si el mismo pertenece al usuario #} 
{% if app.user == p.usuario %}    
     <div style="position: absolute; top: 1px; right: 5px; z-index: 100">
         <img style="display: none" src="{{ asset(path_img~'preload.gif') }}">
         <span class="glyphicon glyphicon-remove" title="Clique para excluir seu mensagem"
               style="color: #999; font-size: 0.8em; cursor: pointer"
               onclick="excluirPublicacao({{ p.id }}, 1)"></span>          
     </div>   
{% endif %}        
{# Panel de Identificación del usuario #}      
     <div style="padding: 15px 5px 5px 5px">
       <div class="media" >
          {% set foto = asset(path_img ~'ico-user.png') %} 
          {% if p.usuario.foto|length > 0 %}            
          {% set foto = asset(path_retratos ~ p.usuario.foto) %}
          {% endif %}     
           <div class="pull-left" style="width:50px; vertical-align: central">
               <img class="media-object img-responsive img-thumbnail" style="width:100%"
                    src="{{ foto }}">
           </div>
           <div class="media-body" style="text-align:justify; padding-right: 10px">
            <p class="media-heading">{{ p.usuario.nome }}</p>
            <p class="mensagens-data">{{ p.data|date('d/m/Y - h:ia')}}</p>
           </div>        
       </div>              
     </div>              
     <div class="row">
       <div class="col-lg-12" style="text-align:justify">         
         {{ p.titulo|length > 100 ? p.titulo|slice(0, 100) ~ '...' : p.titulo  }}                              
       </div>
     </div>
     <hr/>      
     <div class="row" style="padding:0px 5px 10px">
       <div class="col-lg-6">          
            <a data-toggle="collapse" href="#collapse{{p.id}}">
               <img src="{{ asset(path_img ~'ico-comentarios.png')}}" 
                  width="22" height="24"/>
               <span style="margin-left:5px;">Comentários</span></a>          
       </div>
       <div class="col-lg-6" style="text-align: right">          
            <a data-toggle="collapse" href="#collapse{{p.id}}">
               <img src="{{ asset(path_img ~'ico-leia.png')}}" 
                     width="23" height="19">
               <span style="margin-left:5px;">Leia Mais</span></a>           
       </div>
     </div>                      
  </div>
</div>
{# ACCORDION #}    
{% include 'PmcIntranetBundle:Templates:acordeon.html.twig' %}  

<!-- BOX MENSAGEM END -->